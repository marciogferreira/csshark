SELECT `cli`.*,
(
    SELECT count(1) 
    FROM pedidos
      WHERE cliente_id = cli.id
      GROUP BY cliente_id) AS quant_pedidos
   FROM `clients` AS `cli`
   INNER JOIN `colaboradors` AS `c` ON `c`.`id` = `cli`.`vendedor_id`
   LEFT JOIN `pedidos` AS `p` ON `p`.`cliente_id` = `cli`.`id`
   LEFT JOIN `visitas` AS `v` ON `v`.`cliente_id` = `cli`.`id`
   GROUP BY 
   `id`,
    `razao_social`,
    `nome_fantasia`,
    `cnpj`,
    `cpf`,
    `logradouro`,
    `numero`,
    `complemento`,
    `bairro`,
    `cidade`,
    `uf`,
    `cep`,
    `fone`,
    `celular`,
    `email`,
    `vendedor_id`,
    `tabela_id`,
    `telefone`,
    `observacao`,
    `situacao`,
    `nome_contato`,
    `email_contato`,
    `telefone_contato`





















   (
    SELECT count(1) 
    FROM pedidos
      WHERE cliente_id = cli.id
      GROUP BY cliente_id) AS quant_pedidos


SELECT `cli`.*,
    (
        SELECT clit.*
        FROM (
            SELECT cli.*
            FROM `clients` AS `cli`
                INNER JOIN `colaboradors` AS `c` ON `c`.`id` = `cli`.`vendedor_id`
                LEFT JOIN `pedidos` AS `p` ON `p`.`cliente_id` = `cli`.`id`
                LEFT JOIN `visitas` AS `v` ON `v`.`cliente_id` = `cli`.`id`
            GROUP BY 
            `id`,
            `razao_social`,
            `nome_fantasia`,
            `cnpj`,
            `cpf`,
            `logradouro`,
            `numero`,
            `complemento`,
            `bairro`,
            `cidade`,
            `uf`,
            `cep`,
            `fone`,
            `celular`,
            `email`,
            `vendedor_id`,
            `tabela_id`,
            `telefone`,
            `observacao`,
            `situacao`,
            `nome_contato`,
            `email_contato`,
            `telefone_contato`
        ) as clit
    ) as ped
   

